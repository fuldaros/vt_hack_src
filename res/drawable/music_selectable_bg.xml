<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="?separator_alpha"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/mask">
        <shape>
            <solid android:color="?text_primary" />
            <corners android:radius="@dimen/music_selectable_bg_corners" />
        </shape>
    </item>
    <item>
        <selector>
            <item android:state_selected="true">
                <shape>
                    <solid android:color="?separator_alpha" />
                    <corners android:radius="@dimen/music_selectable_bg_corners" />
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="@color/clear" />
                    <corners android:radius="@dimen/music_selectable_bg_corners" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>