<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/white" />
                    <size android:height="24.0dip" android:width="24.0dip" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center" android:src="@drawable/ic_podcast_pause_16" android:tint="#ff000c1a" />
            </item>
        </layer-list>
    </item>
    <item android:state_selected="false">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/white" />
                    <size android:height="24.0dip" android:width="24.0dip" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center" android:src="@drawable/ic_podcast_play_16" android:tint="#ff000c1a" />
            </item>
        </layer-list>
    </item>
</selector>