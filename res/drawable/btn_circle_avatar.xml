<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="?landing_field_background" />
            <stroke android:width="2.5dip" android:color="?accent" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="?landing_field_background" />
            <stroke android:width="2.5dip" android:color="?landing_field_border" />
        </shape>
    </item>
</selector>